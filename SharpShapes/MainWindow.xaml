<Window x:Class="SharpShapes.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SharpShapes"
        mc:Ignorable="d"
        Title="MainWindow" Height="550" Width="575" MinWidth="575" MaxHeight="550">
    
    <StackPanel Width="Auto" Height="Auto">
        <StackPanel Width="575" Height="50" HorizontalAlignment="Center">
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" Width="auto" Height="50" >
                <ComboBox x:Name="combo1" Height="25" Width="125" Margin="5"></ComboBox>
                <TextBox Height="25" Width="125" Margin="5" Padding="5"></TextBox>
                <TextBox Height="25" Width="125" Margin="5" Padding="5"></TextBox>
                <Button Height="25" Width="125" Margin="5" Content="Create" Click="Button_Click"></Button>
            </StackPanel>
        </StackPanel>
        <Canvas Background="Red" Width="Auto" Height="500" >
            
        </Canvas>
    </StackPanel>
    
</Window>
